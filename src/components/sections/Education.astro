---
import Section from "@/components/Section.astro"
import {education} from "@cv"
---
<Section title=" Education">
    <ul>
        {
            education.map(
                ({
                    institution,
                    startDate,
                    endDate,
                    area,
                    summary
                    
                }) => {
                    const startYear = new Date(startDate).getFullYear();
                    const endYear =
                        endDate !== null
                            ? new Date(endDate).getFullYear()
                            : "Current";
                    const years = `${startYear}-${endYear}`;
                    return (
                        <li>
                            <article>
                                <header>
                                    <div>
                                        <h3>{institution}</h3>
                                        <h4>{area}</h4>
                                    </div>
                                    <time>{years}</time>
                                </header>
                                <div>
                                    <p>{summary}</p>
                                </div>

                               
                            </article>
                        </li>
                    );
                },
            )
        }
    </ul>
</Section>

<style>
     ul {
        display: flex;
        flex-direction: column;
        gap: 32px;
    }
    article h3 {
        font-weight: 500;
        color: #111;
        margin-bottom: 8px;
    }
    article h4 {
        font-weight: 400;
        color: #222;
    }
    header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 4px;
    }

    time {
        font-size: 0.85rem;
        color: #555;
    }
    article span {
        border-radius: 6px;
        background: #555;
        padding: 3px;
        font-size: 0.85rem;
        color: #eee;
    }
</style>