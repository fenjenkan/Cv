---
import Section from "@/components/Section.astro";
import { skills } from "@cv";

---

<Section title=" Skills">
    <ul>
        {
            skills.map(({ name, image }) => (
                <li>
                    <img src={image} alt="" width="17"/>
                    <span>{name}</span>
                </li>
            )

                
            )
        }
    </ul>
</Section>

<style>
    ul {
        display: inline-flex;
        gap: 8px;
        flex-wrap: wrap;
    }
    li {
        border-radius: 6px;
        background: #eee;
        color: black;
        font-size: 0.8rem;
        font-weight: 500;
        padding: 0.2rem 0.6rem;
        display: flex;
        align-items: center;
        
    },
    li span{
        padding: 60px;
    }
</style>
